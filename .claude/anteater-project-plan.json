              ]
            },
            {
              "id": "1.4.7",
              "name": "Document storybook-rules.md",
              "extract": [
                "MDX paragraph wrapping bug",
                "AllStates story requirement",
                "autoFocus for focus states",
                "Composition patterns"
              ]
            }
          ]
        },
        {
          "id": "1.5",
          "name": "Document Core Components",
          "description": "Identify and document the ~20 essential components",
          "subtasks": [
            {
              "id": "1.5.1",
              "name": "Identify core component list",
              "criteria": [
                "Used in 80% of UIs",
                "Foundation for composition",
                "Essential for forms",
                "Required for feedback/status"
              ],
              "proposed_list": [
                "Button",
                "Input",
                "Textarea",
                "Select",
                "Checkbox",
                "Radio",
                "Switch",
                "Label",
                "Card",
                "Badge",
                "Avatar",
                "Alert",
                "Dialog/Modal",
                "Dropdown",
                "Tooltip",
                "Tabs",
                "Separator",
                "Skeleton",
                "Spinner",
                "Toast"
              ]
            },
            {
              "id": "1.5.2",
              "name": "Document each component",
              "per_component": [
                "Props interface",
                "Variants",
                "Default values",
                "Token usage",
                "Accessibility features",
                "Radix UI dependency"
              ]
            }
          ]
        },
        {
          "id": "1.6",
          "name": "Document NPM Scripts",
          "description": "Extract all automation scripts",
          "scripts": [
            {
              "name": "generate-tokens",
              "purpose": "Regenerate tokens.css from designTokens.ts",
              "file": "scripts/generate-tokens.ts"
            },
            {
              "name": "sync-components",
              "purpose": "Update component-registry.json",
              "file": "scripts/sync-components.ts"
            },
            {
              "name": "sync-docs",
              "purpose": "Sync documentation",
              "file": "scripts/sync-docs.ts"
            },
            {
              "name": "validate-context",
              "purpose": "Validate agent-context.json against schema",
              "file": "scripts/validate-context.ts"
            }
          ]
        },
        {
          "id": "1.7",
          "name": "Document Project Structure",
          "description": "Map the complete file/folder structure",
          "structure": {
            ".claude/": "Agent context, rules, hooks, agents",
            "src/components/ui/": "Core UI components",
            "src/constants/": "Design tokens",
            "src/styles/": "Generated CSS",
            "src/stories/": "Storybook documentation",
            "scripts/": "Automation scripts"
          }
        }
      ]
    },
    {
      "id": "phase-2",
      "name": "Package Architecture",
      "description": "Design the Anteater package structure",
      "tasks": [
        {
          "id": "2.1",
          "name": "Design package structure",
          "structure": {
            "anteater/": {
              "package.json": "npm package config",
              "README.md": "Package documentation",
              "bin/": {
                "anteater.js": "CLI entry point"
              },
              "templates/": {
                "base/": "Base project files",
                "tokens/": "Token templates",
                "components/": "Component templates",
                "storybook/": "Storybook config templates",
                "claude/": ".claude/ directory templates"
              },
              "agents/": {
                "setup-agent.md": "Main setup conversation agent"
              },
              "lib/": {
                "generator.ts": "Project generation logic",
                "tokens.ts": "Token generation from brand colors",
                "components.ts": "Component scaffolding",
                "validation.ts": "Setup validation"
              },
              "docs/": {
                "architecture.md": "System architecture",
                "tokens.md": "Token system docs",
                "components.md": "Component docs",
                "hooks.md": "Hookify rules docs",
                "agents.md": "Agent definitions docs"
              }
            }
          }
        },
        {
          "id": "2.2",
          "name": "Define template variables",
          "variables": {
            "brand": {
              "name": "Client/project name",
              "logo": "Path to logo file",
              "favicon": "Path to favicon"
            },
            "colors": {
              "primary": "Main brand color (hex)",
              "secondary": "Secondary brand color (hex)",
              "accent": "Accent color (hex)",
              "neutral": "Neutral/background color (hex)",
              "error": "Error color (optional, default: #F70D1A)",
              "success": "Success color (optional, default: #22C55E)",
              "warning": "Warning color (optional, default: #EAB308)",
              "info": "Info color (optional, default: #3B82F6)"
            },
            "typography": {
              "displayFont": "Display/heading font name",
              "bodyFont": "Body text font name",
              "monoFont": "Monospace font (optional)"
            },
            "config": {
              "packageName": "npm package name",
              "outputDir": "Output directory path"
            }
          }
        },
        {
          "id": "2.3",
          "name": "Create color scale generator",
          "description": "Algorithm to generate 50-900 shades from a single hex color",
          "algorithm": {
            "input": "Single hex color (e.g., #08A4BD)",
            "output": "10-shade scale (50, 100, 200, 300, 400, 500, 600, 700, 800, 900)",
            "method": "oklch color space manipulation",
            "steps": [
              "Convert hex to oklch",
              "Use input as 500 (base)",
              "Generate lighter shades (50-400) by increasing L",
              "Generate darker shades (600-900) by decreasing L",
              "Maintain chroma and hue"
            ]
          }
        }
      ]
    },
    {
      "id": "phase-3",
      "name": "Setup Agent Design",
      "description": "Design the conversational setup experience",
      "tasks": [
        {
          "id": "3.1",
          "name": "Design conversation flow",
          "flow": [
            {
              "step": 1,
              "name": "Welcome",
              "agent_says": "Welcome to Anteater! I'll help you create a production-ready design system. Let's start with some basics.",
              "questions": []
            },
            {
              "step": 2,
              "name": "Project Info",
              "questions": [
                {
                  "id": "project_name",
                  "ask": "What's the name of your project/company?",
                  "type": "text",
                  "validation": "non-empty string",
                  "example": "Acme Corp"
                },
                {
                  "id": "package_name",
                  "ask": "What should I name the npm package?",
                  "type": "text",
                  "default": "{project_name}-design-system (kebab-case)",
                  "validation": "valid npm package name"
                },
                {
                  "id": "output_dir",
                  "ask": "Where should I create the project?",
                  "type": "path",
                  "default": "./{package_name}"
                }
              ]
            },
            {
              "step": 3,
              "name": "Brand Colors - Primary",
              "questions": [
                {
                  "id": "color_primary",
                  "ask": "What's your primary brand color? This will be used for main text, buttons, and key UI elements.",
                  "type": "color",
                  "validation": "valid hex color",
                  "example": "#2D3142 (dark blue-gray)"
                }
              ],
              "agent_action": "Generate primary color scale preview"
            },
            {
              "step": 4,
              "name": "Brand Colors - Secondary",
              "questions": [
                {
                  "id": "color_secondary",
                  "ask": "What's your secondary/accent color? This will be used for links, focus states, and brand highlights.",
                  "type": "color",
                  "validation": "valid hex color",
                  "example": "#08A4BD (teal)"
                }
              ],
              "agent_action": "Generate secondary color scale preview"
            },
            {
              "step": 5,
              "name": "Brand Colors - Tertiary (Optional)",
              "questions": [
                {
                  "id": "color_tertiary",
                  "ask": "Do you have a tertiary brand color? (Press Enter to skip)",
                  "type": "color",
                  "optional": true,
                  "default": "Generate complementary from primary"
                }
              ]
            },
            {
              "step": 6,
              "name": "Brand Colors - Accent",
              "questions": [
                {
                  "id": "color_accent",
                  "ask": "What color should I use for important accents and CTAs? (Often a warm color like red/orange)",
                  "type": "color",
                  "validation": "valid hex color",
                  "example": "#F70D1A (red)"
                }
              ]
            },
            {
              "step": 7,
              "name": "Background Color",
              "questions": [
                {
                  "id": "color_background",
                  "ask": "What's your preferred page background color?",
                  "type": "choice",
                  "options": [
                    { "label": "Pure White (#FFFFFF)", "value": "#FFFFFF" },
                    { "label": "Warm Cream (#FBFBF3)", "value": "#FBFBF3" },
                    { "label": "Cool Gray (#F8FAFC)", "value": "#F8FAFC" },
                    { "label": "Custom", "value": "custom" }
                  ]
                }
              ]
            },
            {
              "step": 8,
              "name": "Typography",
              "questions": [
                {
                  "id": "font_display",
                  "ask": "What font should I use for headings/display text?",
                  "type": "text",
                  "default": "Inter",
                  "hint": "Enter a Google Font name or system font"
                },
                {
                  "id": "font_body",
                  "ask": "What font for body text?",
                  "type": "text",
                  "default": "Inter",
                  "hint": "Often the same as display, or a more readable variant"
                }
              ]
            },
            {
              "step": 9,
              "name": "Logo",
              "questions": [
                {
                  "id": "logo_path",
                  "ask": "Do you have a logo file? (Provide path or URL, or skip)",
                  "type": "file",
                  "optional": true,
                  "accepted": [".svg", ".png"],
                  "hint": "SVG preferred for best quality"
                }
              ]
            },
            {
              "step": 10,
              "name": "Confirmation",
              "agent_action": "Display full color palette preview",
              "questions": [
                {
                  "id": "confirm",
                  "ask": "Here's your design system preview. Should I generate the project?",
                  "type": "confirm"
                }
              ]
            },
            {
              "step": 11,
              "name": "Generation",
              "agent_action": [
                "Create project directory",
                "Generate PRIMITIVES from brand colors",
                "Generate ALIAS tokens",
                "Create Tailwind config",
                "Copy component templates",
                "Configure Storybook",
                "Set up .claude/ directory",
                "Install dependencies",
                "Run initial build"
              ]
            },
            {
              "step": 12,
              "name": "Complete",
              "agent_says": "Your design system is ready! Run `npm run storybook` to see it in action.",
              "next_steps": [
                "npm run storybook - View your components",
                "npm run build - Build for production",
                "Read .claude/CLAUDE.md for AI development guidelines"
              ]
            }
          ]
        },
        {
          "id": "3.2",
          "name": "Design error handling",
          "scenarios": [
            {
              "error": "Invalid hex color",
              "response": "That doesn't look like a valid color. Please enter a hex color like #FF5500 or try a color name like 'navy'."
            },
            {
              "error": "Directory already exists",
              "response": "That directory already exists. Should I overwrite it, choose a different name, or cancel?"
            },
            {
              "error": "Font not found",
              "response": "I couldn't find that font on Google Fonts. Would you like to use a system font instead, or try a different name?"
            },
            {
              "error": "Low contrast warning",
              "response": "Heads up: your primary color on white background has low contrast (3.2:1). This may cause accessibility issues. Continue anyway or choose a darker shade?"
            }
          ]
        },
        {
          "id": "3.3",
          "name": "Design preview generation",
          "previews": [
            {
              "type": "color_scale",
              "description": "ASCII art showing 10 shades of generated color",
              "format": "Terminal colors if supported, otherwise hex codes"
            },
            {
              "type": "full_palette",
              "description": "All generated colors in categories",
              "sections": ["Primary Scale", "Secondary Scale", "Semantic Colors (text, background, status)"]
            },
            {
              "type": "component_preview",
              "description": "Text mockup of Button with brand colors",
              "example": "[  Primary Button  ] [  Secondary  ] [  Ghost  ]"
            }
          ]
        }
      ]
    },
    {
      "id": "phase-4",
      "name": "Template Creation",
      "description": "Create all template files with variable placeholders",
      "tasks": [
        {
          "id": "4.1",
          "name": "Create base project templates",
          "files": [
            {
              "template": "package.json.template",
              "variables": ["{{packageName}}", "{{projectName}}"],
              "content_type": "JSON"
            },
            {
              "template": "tsconfig.json.template",
              "variables": [],
              "content_type": "JSON"
            },
            {
              "template": "tailwind.config.js.template",
              "variables": ["{{colors}}", "{{fonts}}"],
              "content_type": "JavaScript"
            },
            {
              "template": "vite.config.ts.template",
              "variables": [],
              "content_type": "TypeScript"
            }
          ]
        },
        {
          "id": "4.2",
          "name": "Create token templates",
          "files": [
            {
              "template": "designTokens.ts.template",
              "variables": [
                "{{PRIMARY_SCALE}}",
                "{{SECONDARY_SCALE}}",
                "{{TERTIARY_SCALE}}",
                "{{ACCENT_SCALE}}",
                "{{NEUTRAL_SCALE}}",
                "{{BACKGROUND_COLOR}}"
              ],
              "description": "Main token file with all PRIMITIVES and ALIAS"
            }
          ]
        },
        {
          "id": "4.3",
          "name": "Create component templates",
          "per_component": {
            "files": [
              "{ComponentName}.tsx",
              "{ComponentName}.stories.tsx"
            ],
            "variables": [
              "Uses generic token references (ALIAS.interactive.primary, etc.)",
              "No hardcoded colors"
            ]
          },
          "components": [
            "Button", "Input", "Textarea", "Select", "Checkbox", "Radio",
            "Switch", "Label", "Card", "Badge", "Avatar", "Alert",
            "Dialog", "Dropdown", "Tooltip", "Tabs", "Separator",
            "Skeleton", "Spinner", "Toast"
          ]
        },
        {
          "id": "4.4",
          "name": "Create Storybook templates",
          "files": [
            {
              "template": ".storybook/main.ts.template",
              "purpose": "Storybook configuration"
            },
            {
              "template": ".storybook/preview.ts.template",
              "purpose": "Global decorators and parameters"
            },
            {
              "template": ".storybook/manager.ts.template",
              "variables": ["{{brandColor}}", "{{projectName}}"],
              "purpose": "Storybook UI branding"
            },
            {
              "template": "stories/Introduction.mdx.template",
              "variables": ["{{projectName}}", "{{brandColors}}"],
              "purpose": "Welcome page"
            }
          ]
        },
        {
          "id": "4.5",
          "name": "Create .claude/ templates",
          "files": [
            {
              "template": "CLAUDE.md.template",
              "variables": ["{{projectName}}"],
              "purpose": "Main agent instructions"
            },
            {
              "template": "agent-context.json.template",
              "variables": ["{{projectName}}", "{{colorScales}}"],
              "purpose": "Agent context with project-specific values"
            },
            {
              "template": "color-matrix.json.template",
              "variables": ["{{derivedFromColors}}"],
              "purpose": "Pre-calculated color combinations"
            },
            {
              "template": "contrast-matrix.json.template",
              "variables": ["{{derivedFromColors}}"],
              "purpose": "Pre-calculated contrast ratios"
            },
            {
              "template": "hookify/*.yaml.template",
              "purpose": "Validation rules (mostly static)"
            },
            {
              "template": "agents/*.md.template",
              "purpose": "Agent definitions (mostly static)"
            },
            {
              "template": "*-rules.md",
              "purpose": "Design rules (static, copy as-is)"
            }
          ]
