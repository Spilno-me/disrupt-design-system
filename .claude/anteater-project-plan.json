{
  "project": {
    "name": "Anteater",
    "tagline": "AI-Powered Frontend Development Platform",
    "description": "A universal tool for building design systems, component libraries, and functional application prototypes - all guided by AI agents with structured context and automated validation.",
    "version": "0.1.0",
    "status": "planning",
    "philosophy": "The AI agent + rule system + structured context creates a new paradigm where developers describe what they want, and AI builds it correctly the first time."
  },

  "vision": {
    "what_it_is": "Complete frontend development platform powered by Claude Code",
    "what_it_enables": [
      "Design Systems - Tokens, branding, typography, spacing from brand colors",
      "Component Libraries - Build UI components in isolation with Storybook",
      "Application Prototypes - Full flows (auth, dashboards, wizards, forms)",
      "AI-Assisted Development - Agent understands context, validates, generates"
    ],
    "unique_innovation": {
      "ai_first": "Agent guides entire workflow, not just assists",
      "rule_based_validation": "Hookify prevents mistakes automatically",
      "single_source_of_truth": "JSON context enables principled AI decisions",
      "combination": "These three together create a new development paradigm"
    },
    "target_audience": [
      "Solo developers - Build professional UIs without design team",
      "Agencies/Studios - Rapidly spin up client projects with consistent quality",
      "Product teams - Maintain design consistency across large codebases"
    ]
  },

  "deliverables": {
    "primary": "Standalone package that enables AI-powered frontend development",
    "capabilities": {
      "design_system": {
        "tokens": "2-tier token system (PRIMITIVES + ALIAS) from brand colors",
        "branding": "Logo, colors, typography, spacing - full brand identity",
        "documentation": "Auto-generated design system docs in Storybook"
      },
      "component_library": {
        "core_components": "~20 production-ready UI components",
        "stories": "Interactive component documentation",
        "isolation": "Develop and test components independently"
      },
      "application_prototypes": {
        "flows": "Auth flows, onboarding wizards, dashboard layouts",
        "pages": "Complete page templates with real interactions",
        "data": "Mock data integration for realistic prototypes"
      },
      "ai_development": {
        "context": "Full .claude/ configuration for AI understanding",
        "validation": "Hookify rules prevent common mistakes",
        "agents": "Specialized agents for different tasks"
      }
    }
  },

  "phases": [
    {
      "id": "phase-1",
      "name": "Documentation & Extraction",
      "description": "Document every aspect of the current DDS system in detail",
      "duration_estimate": "research-phase",
      "tasks": [
        {
          "id": "1.1",
          "name": "Document Token Architecture",
          "description": "Extract and document the complete 2-tier token system",
          "subtasks": [
            {
              "id": "1.1.1",
              "name": "Document PRIMITIVES tier",
              "details": {
                "what": "All color scales (ABYSS, DEEP_CURRENT, DUSK_REEF, CORAL, WAVE, SUNRISE, HARBOR, SLATE, ORANGE) and base primitives",
                "extract_from": "src/constants/designTokens.ts",
                "document": [
                  "Color scale structure (50-900 shades)",
                  "Naming conventions",
                  "Color format (hex)",
                  "Purpose of each scale"
                ]
              }
            },
            {
              "id": "1.1.2",
              "name": "Document ALIAS tier",
              "details": {
                "what": "All semantic token categories",
                "categories": [
                  "text (primary, secondary, tertiary, emphasis, disabled, inverse, link, error, success, warning, info)",
                  "background (page, surface, surfaceHover, elevated, muted, inverse, accent, accentSubtle, error, success, warning, info)",
                  "border (default, subtle, strong, focus, error, success, warning, info, disabled, accent, inverse)",
                  "icon (primary, secondary, tertiary, disabled, inverse, accent, error, success, warning, info)",
                  "interactive (primary, primaryHover, primaryActive, accent, accentHover, danger, dangerHover, disabled)",
                  "status (error, errorLight, errorMuted, success, successLight, warning, warningLight, info, infoLight)",
                  "overlay (light, medium, dark, darkStrong, white15, white50, subtle)",
                  "shadow (sm, header, footer)",
                  "brand (primary, secondary, tertiary, accent, neutral)",
                  "feature (automate, advice, adapt, scale)",
                  "aging (primary, dark, light)"
                ],
                "document": [
                  "Each category's purpose",
                  "Token naming patterns",
                  "Which PRIMITIVES each ALIAS references",
                  "Usage examples"
                ]
              }
            },
            {
              "id": "1.1.3",
              "name": "Document supporting tokens",
              "details": {
                "what": "Non-color tokens",
                "includes": [
                  "SHADOWS (none, sm, md, lg, xl, elevated)",
                  "RADIUS (xs, sm, md, lg, xl, 2xl, full)",
                  "SPACING (micro, tight, base, comfortable, spacious, section, page)",
                  "TYPOGRAPHY (fontFamily, fontSize, fontWeight, lineHeight, letterSpacing)",
                  "TRANSITIONS (duration, timing)",
                  "ANIMATION (duration, easing, particles, rotation)",
                  "Z_INDEX (background, content, dropdown, sticky, header, modal, tooltip)",
                  "BREAKPOINTS (sm, md, lg, xl, 2xl)"
                ]
              }
            }
          ]
        },
        {
          "id": "1.2",
          "name": "Document Hookify Rules",
          "description": "Extract all validation rules and their purposes",
          "subtasks": [
            {
              "id": "1.2.1",
              "name": "Document YAML hooks",
              "details": {
                "files": [
                  ".claude/hookify/session-context.yaml",
                  ".claude/hookify/contrast-check.yaml",
                  ".claude/hookify/agent-assist.yaml"
                ],
                "document": [
                  "Hook structure (name, event, tools, match patterns)",
                  "Action types (block, warn, check)",
                  "Message formatting",
                  "When each hook triggers"
                ]
              }
            },
            {
              "id": "1.2.2",
              "name": "Document local.md hooks",
              "details": {
                "files": [
                  "hookify.prevent-raw-hex-colors.local.md",
                  "hookify.prevent-primitive-imports.local.md",
                  "hookify.prevent-standard-tailwind-colors.local.md",
                  "hookify.enforce-design-tokens-in-stories.local.md",
                  "hookify.warn-new-ui-component.local.md",
                  "hookify.block-claude-attribution.local.md"
                ],
                "document": [
                  "Regex patterns used",
                  "What each rule prevents",
                  "Error messages",
                  "File path filters"
                ]
              }
            }
          ]
        },
        {
          "id": "1.3",
          "name": "Document Agent Definitions",
          "description": "Extract agent configurations and behaviors",
          "subtasks": [
            {
              "id": "1.3.1",
              "name": "Document Component Builder agent",
              "details": {
                "file": ".claude/agents/component-builder.md",
                "document": [
                  "Mission statement",
                  "Available tools",
                  "Trigger conditions",
                  "Figma-to-token mapping table",
                  "Workflow steps",
                  "Output format"
                ]
              }
            },
            {
              "id": "1.3.2",
              "name": "Document Tokens Guardian agent",
              "details": {
                "file": ".claude/agents/tokens-guardian.md",
                "document": [
                  "Mission statement",
                  "Enforcement rules",
                  "Migration guidance",
                  "Audit procedures"
                ]
              }
            }
          ]
        },
        {
          "id": "1.4",
          "name": "Document Rule Files",
          "description": "Extract all design rules and their applications",
          "subtasks": [
            {
              "id": "1.4.1",
              "name": "Document spacing-rules.md",
              "extract": [
                "4px base unit system",
                "7-level hierarchy (micro â†’ page)",
                "Proximity principle",
                "Common spacing patterns"
              ]
            },
            {
              "id": "1.4.2",
              "name": "Document typography-rules.md",
              "extract": [
                "Font families (Fixel, Pilat Extended)",
                "Size scale",
                "Weight usage",
                "Line length rules"
              ]
            },
            {
              "id": "1.4.3",
              "name": "Document iconography-rules.md",
              "extract": [
                "No emojis rule",
                "Lucide React usage",
                "Size standards (XS-XL)",
                "Icon container patterns"
              ]
            },
            {
              "id": "1.4.4",
              "name": "Document rounded-corners-rules.md",
              "extract": [
                "Radius tokens (xs-full)",
                "Nested corner formula",
                "Component-specific radii"
              ]
            },
            {
              "id": "1.4.5",
              "name": "Document color-matrix.json",
              "extract": [
                "Background categories",
                "Allowed foreground colors",
                "Forbidden combinations",
                "Golden rules"
              ]
            },
            {
              "id": "1.4.6",
              "name": "Document contrast-matrix.json",
              "extract": [
                "Pre-calculated ratios",
