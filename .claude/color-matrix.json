  "quickLookup": {
    "_description": "Fast lookup: background → text color",
    "ABYSS[500-900]": "PRIMITIVES.white or SLATE[300]",
    "DEEP_CURRENT[500-700]": "PRIMITIVES.white",
    "DUSK_REEF[500-700]": "PRIMITIVES.white",
    "PRIMITIVES.white": "ABYSS[500]",
    "PRIMITIVES.cream": "ABYSS[500]",
    "SLATE[50-200]": "ABYSS[500] or DUSK_REEF[500]",
    "SLATE[700-900]": "PRIMITIVES.white or SLATE[200]",
    "gradients(dark)": "PRIMITIVES.white + SLATE[300]",
    "gradients(light)": "ABYSS[500] + DUSK_REEF[500]"
  },

  "rules": {
    "golden": "Same color family on itself = BAD (ABYSS text on ABYSS bg)",
    "contrast": "Dark bg → Light text | Light bg → Dark text",
    "hierarchy": "primary = strongest contrast, muted = weakest (but still readable)",
    "test": "Would this be visible if printed in grayscale? No = wrong choice"
  }
