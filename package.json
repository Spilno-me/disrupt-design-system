{
  "name": "@adrozdenko/design-system",
  "version": "2.8.0",
  "description": "Disrupt Design System - Unified design language and component library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./flow": {
      "import": "./dist/flow/index.js",
      "types": "./dist/flow/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/constants/designTokens.js",
      "types": "./dist/constants/designTokens.d.ts"
    },
    "./tokens.css": "./dist/styles/tokens.css",
    "./styles": "./dist/assets/index.css",
    "./tailwind-preset": "./tailwind-preset.js",
    "./plugins/dashed-borders": "./dashed-borders-plugin.js"
  },
  "files": [
    "dist",
    "tailwind-preset.js",
    "dashed-borders-plugin.js",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "generate-tokens": "node scripts/generate-tokens.js",
    "validate:tokens": "node scripts/validate-tokens.js",
    "validate:readme": "node scripts/validate-readme.js",
    "validate:agents": "node scripts/validate-agent-instructions.js",
    "validate:version": "node scripts/detect-version-drift.js",
    "validate:contrast": "node scripts/validate-contrast.js",
    "validate:prompts": "node scripts/validate-prompts.js",
    "prebuild": "npm run generate-tokens && npm run validate:tokens",
    "build": "tsc && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest --project=storybook",
    "test:run": "vitest --project=storybook --run",
    "test:ui": "vitest --project=storybook --ui",
    "health": "npm run typecheck && npm run lint && npm run validate:tokens && npm run validate:readme && npm run validate-context && npm run validate:agents && npm run validate:version && npm run validate:prompts",
    "update-docs": "node scripts/update-claude-docs.js",
    "validate-context": "node scripts/validate-agent-context.js",
    "sync-components": "node scripts/sync-component-status.js",
    "sync-docs": "node scripts/sync-docs.js",
    "sync:prompts": "node scripts/sync-prompt-library.js",
    "sync:colors": "node scripts/generate-color-matrix.js",
    "sync:all": "npm run sync:prompts && npm run sync:colors && npm run sync-docs && npm run update-docs",
    "extract-deps": "node scripts/extract-dependencies.js",
    "prepare": "simple-git-hooks",
    "version": "node scripts/bump-version.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run sync:all && npm run health && npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spilno-me/disrupt-design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tailwind",
    "storybook",
    "ui-components"
  ],
  "author": "Disrupt Inc.",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@types/d3-drag": "^3.0.7",
    "@types/d3-force": "^3.0.10",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-zoom": "^3.0.8",
    "@types/leaflet": "^1.9.21",
    "@types/three": "^0.182.0",
    "@what3words/react-components": "^5.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3-drag": "^3.0.0",
    "d3-force": "^3.0.0",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.24",
    "prism-react-renderer": "^2.4.1",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "three": "^0.182.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-onboarding": "^10.1.4",
    "@storybook/addon-themes": "^10.1.4",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/react-vite": "^10.1.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "chromatic": "^13.3.4",
    "eslint": "^9.39.1",
    "gsap": "^3.13.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "simple-git-hooks": "^2.13.1",
    "storybook": "^10.1.4",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  }
}
